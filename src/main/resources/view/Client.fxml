<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="900" style="-fx-background-color: linear-gradient(to bottom right, #1e293b, #0f172a);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.weatherbroadcastsys.controller.ClientController">

    <VBox alignment="CENTER" prefHeight="600" prefWidth="900" spacing="20">
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" text="ðŸŒ¤ï¸ Real-Time Weather Broadcast" />

        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="txtServerIp" promptText="Server IP" style="-fx-background-radius: 10; -fx-background-color: #334155; -fx-text-fill: white;" />
            <TextField fx:id="txtPort" promptText="Port" style="-fx-background-radius: 10; -fx-background-color: #334155; -fx-text-fill: white;" />
            <Button fx:id="btnConnect" onMouseClicked="#connectServerOnAction" style="-fx-background-color: #38bdf8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Connect" />
        </HBox>

        <HBox alignment="CENTER" spacing="30">
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #1e293b; -fx-padding: 20; -fx-background-radius: 15; -fx-min-width: 180;">
                <Label style="-fx-text-fill: #94a3b8; -fx-font-size: 14;" text="Temperature" />
                <Label fx:id="lblTemperature" style="-fx-font-size: 24px; -fx-text-fill: #f1f5f9; -fx-font-weight: bold;" text="-- Â°C" />
            </VBox>
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #1e293b; -fx-padding: 20; -fx-background-radius: 15; -fx-min-width: 180;">
                <Label style="-fx-text-fill: #94a3b8; -fx-font-size: 14;" text="Humidity" />
                <Label fx:id="lblHumidity" style="-fx-font-size: 24px; -fx-text-fill: #f1f5f9; -fx-font-weight: bold;" text="-- %" />
            </VBox>
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #1e293b; -fx-padding: 20; -fx-background-radius: 15; -fx-min-width: 180;">
                <Label style="-fx-text-fill: #94a3b8; -fx-font-size: 14;" text="Wind Speed" />
                <Label fx:id="lblWindSpeed" style="-fx-font-size: 24px; -fx-text-fill: #f1f5f9; -fx-font-weight: bold;" text="-- km/h" />
            </VBox>
        </HBox>

        <VBox prefHeight="300" prefWidth="800" spacing="10">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="Weather Trend" />
            <LineChart fx:id="lineChart" prefHeight="280" prefWidth="800" style="-fx-background-color: #0f172a; -fx-text-fill: white;">
                <xAxis>
                    <CategoryAxis label="Time" style="-fx-tick-label-fill: white; -fx-label-fill: white;" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Value" style="-fx-tick-label-fill: white; -fx-label-fill: white;" />
                </yAxis>
            </LineChart>
        </VBox>

        <Label fx:id="lblStatus" style="-fx-text-fill: #f87171; -fx-font-size: 14; -fx-font-weight: bold;" text="Disconnected" />
    </VBox>
</AnchorPane>
